.usertop{
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  padding:0px 100rpx;
  line-height: 240rpx;
  font-size: 30rpx;
  /* border: 1px solid red */
}
.usertop image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 60rpx
}
.onebar{
  width: 100%;
  height: 120rpx;
  border-bottom: 4px solid #fdfbfb;
  box-sizing: border-box;
  padding: 0rpx 60rpx;
  line-height: 120rpx;
  font-size: 30rpx;

}
.onebar image{
  width: 30rpx;
  margin-top: 30rpx
}
.cover{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: rgba(15, 15, 15,0.6)
}
.content{
  width: 80%;
  height: 445rpx;
  background: #fff;
  margin: auto;
  margin-top: 300rpx;
  box-sizing: border-box;
  padding: 40rpx;
  position: relative
}
.close{
  width: 30rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx
}
.content .title{
  font-size: 28rpx;
  margin-top: 60rpx
}
.content input{
  border: none;
  border-bottom: 1rpx solid #adacac;
  height: 80rpx;
  margin-top: 60rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 15rpx
}
.btnbox{
  width: 100%;
  height: 60rpx;
  margin-top: 30rpx
}
.btnbox .no{
  font-size: 24rpx;
  color: #333;
  border: 1rpx solid rgb(85, 84, 84);
  padding: 5rpx 8rpx;
  border-radius: 18rpx;
  width: 60rpx;
  text-align: center;
  float: right;
  
}
.btnbox .yes{
  text-align: center;
  width: 60rpx;
  font-size: 24rpx;
  color: #fff;
  background: #2079CC;
  border: 1rpx solid #2079CC;
  padding: 5rpx 8rpx;
  border-radius: 18rpx;
  float: right;
  margin-right: 30rpx
}
.sexbox{
  width: 80%;
  height: 300rpx;
  background: #fff;
  margin: auto;
  margin-top: 340rpx;
  box-sizing: border-box;
  padding: 40rpx;
  position: relative
}
.sex{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
.active{
  color: #2079CC
}
.sexbox :first-child{
  border-bottom: 1rpx solid #adacac
}
.onebar .name{
  text-align: right;
  width: 300rpx;
  height: 120rpx;
  font-size: 26rpx
}
.cover{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: rgba(15, 15, 15,0.6)
}
.centerbox{
  width:60%;
  height: auto;
  background: #fff;
  margin: auto;
  margin-top: 200rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 80rpx;
  padding-bottom: 40rpx;
  border-radius: 12rpx
}
.centerbox image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 30rpx
  }
.centerbox button{
  list-style: none;
  padding: 0;
  width: 70%;
  height: 60rpx;
  background: #2079CC;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin-bottom:12rpx;
  margin-top: 30rpx
}