.theone{
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 32rpx 60rpx;
  border-bottom: 1px solid rgb(247, 247, 247)
}
.theone .status{
  color:#277FDB;
  text-align: right;
  font-size: 26rpx;
  margin-bottom: 16rpx
}
.theone image{
  width:  42%;
  border-radius: 10rpx
}
.rightgoods{
  width: 50%;
  height: auto;
  font-size: 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx
}
.rightgoods .price{
  color: red;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 20rpx
}
.botstatus{
  text-align: right;
  font-size: 28rpx
}
.botstatus text{
  font-size: 20rpx;
  color: #cccccc
}
.buttons{
  height: 50rpx;
  margin-top: 30rpx
}
.giveup{
  width: 150rpx;
  height: 40rpx;
  border: 1px solid rgb(190, 187, 187);
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  color: rgb(190, 187, 187);
  margin-right: 20rpx
}
.pay{
  width: 150rpx;
  height: 40rpx;
  border: 1px solid #277FDB;
  text-align: center;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #277FDB;
}