.redbag{
  width: 100%;
  height: 320rpx;
  box-shadow: 0rpx 0rpx 60rpx 10rpx rgb(245, 244, 244);
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 20rpx 60rpx
}
.price {
  width: 50%;
  font-size: 26rpx;
  color: #696969
}
.price .redprice{
  color: red;
  font-size: 90rpx;
  line-height: 180rpx
}
.time{
  font-size: 30rpx;
  width: 50%;
  height: auto;
  text-align: right;
  color: #696969;
  position: relative;
  box-sizing: border-box;
  padding-top: 60rpx
  

}
.use{
  color: #696969;
  width: 215rpx;
  height: 52rpx;
  border: 1rpx solid #438FE0;
  box-sizing: border-box;
  text-align: center;
  border-radius: 26rpx;
  line-height: 52rpx;
  position: absolute;
  right: 0px;
  margin-top: 60rpx
}