.newslist{
  width: 100%;
   box-sizing: border-box;
  padding: 40rpx 50rpx;
  height: auto;
  border-bottom: 18rpx solid rgb(253, 253, 253)
}
.newslist image{
  width: 40%;
  height: auto;
  border-radius: 10rpx
}
.textright{
  width: 54%;
  height: 140rpx;
  margin-top: 26rpx
 
}
.textright text{
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx
}
.itemcontent{
   font-size: 25rpx;
   margin-top: 30rpx;
   overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.mustnews{
  width: 100%;
  height: auto;
  margin: auto;
 
}
.news_title{
  font-size: 38rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 20rpx
}